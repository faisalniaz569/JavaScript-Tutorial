/*==================
    Example 28
====================*/

Html:

<p id="demo"></p>

js:

/*

Extracting String Parts
There are 3 methods for extracting a part of a string:

slice(start, end)
substring(start, end)
substr(start, length)

*/


let str = "Apple, Banana, Kiwi";

document.getElementById("demo").innerHTML = str.slice(7, 13);


OR,

let str = "Apple, Banana, Kiwi";
document.getElementById("demo").innerHTML = str.slice(-12, -6);

OR,

let str = "Apple, Banana, Kiwi";
document.getElementById("demo").innerHTML = str.slice(7);


OR,

let str = "Apple, Banana, Kiwi";
document.getElementById("demo").innerHTML = str.slice(-12);


/*==================
    Example 29
====================*/

Html:

<p id="demo"></p>

js:

let str = "Apple, Banana, Kiwi";
document.getElementById("demo").innerHTML = str.substring(7, 13);

or,

let str = "Apple, Banana, Kiwi";
document.getElementById("demo").innerHTML = str.substr(7, 6);

or,

let str = "Apple, Banana, Kiwi";
document.getElementById("demo").innerHTML = str.substr(7);

or,

let str = "Apple, Banana, Kiwi";
document.getElementById("demo").innerHTML = str.substr(-4);

/*==================
    Example 30
====================*/

Html:

<!--JS Strings -->

<p id="demo">I learn W3Schools.</p>
<button type="button" name="button" onclick="myFunction()">Click Me</button>

js:

/*

Replacing String Content

*/


let str = "I learn W3Schools.";

function myFunction() {
    let x = document.getElementById("demo").innerHTML;
    document.getElementById("demo").innerHTML = x.replace("W3Schools", "JavaScript");
}

/*==================
    Example 31
====================*/

/*

UpperCase

*/

Html:

<p id="demo">I learn W3Schools.</p>
<button type="button" name="button" onclick="myFunction()">Click Me</button>

JS:

function myFunction() {
    let x = document.getElementById("demo").innerHTML;
    document.getElementById("demo").innerHTML = x.toUpperCase();
}

