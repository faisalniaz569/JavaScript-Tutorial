/*==================
    Example 15
====================*/

const cars = ['Volvo', 'BMW', 'Saab'];

// change an element
cars[0] = "Toyota";

// push an element
cars.push("Audi");

document.getElementById("demo").innerHTML = cars;

/*==================
    Example 16
====================*/

// Create an object:
const car = {
    type: "Fiat",
    model: "500",
    color: "white"
};

// Change a property:
car.color = "red";

// Add a property:
car.owner = "Johnson";

// Display the property:
document.getElementById("demo").innerHTML = "Car owner is " + car.owner;


